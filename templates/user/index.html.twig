{% extends 'base.html.twig' %}

{% block title %}Gestionnaire des utilisateurs !{% endblock %}

{% block body %}

        <table>
            <thead>
            <tr>
                <th>Email</th>
                <th>Password</th>
                <th>Actions</th>
            </tr>
            </thead>

            <tbody>
            {% for user in users %}
                <tr class="userRow">
                    <td>{{ user.email }}</td>
                    <td>{{ user.password }}</td>
                    <td>
                        <a href="{{ path('app_user_show', {"user": user.id}) }}">Show</a>
                        <a href="{{ path('app_user_edit', {"user": user.id}) }}">Edit</a>
                        <a href="{{ path('app_user_delete', {"user": user.id}) }}">Delete</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_user_add') }}">Add user</a>

{% endblock %}
